<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff6ea"

    tools:context=".MainActivity2">

    <!-- Top bar layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Logo on the top left -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/applogo"
            android:contentDescription="App Logo" />

        <!-- Contact button on top right -->
        <ImageButton
            android:id="@+id/contactButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/img_2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:contentDescription="Contact Button"
            android:layout_marginEnd="10dp" />

        <!-- Heading centered between logo and contact button -->
        <TextView
            android:id="@+id/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPOWERING THE\nNATION"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:padding="10dp"
        android:hint="Enter users full name"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="Enter users phone number"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="Enter users email address"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkboxFirstAid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Aid (R1 500)"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxSewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sewing (R1 500)"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxLandscaping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landscaping (R1 500)"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxLifeSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life Skills (R1 500)"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxChildMinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Minding (R 750)"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxCooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooking (R 750)"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxGardenMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garden Maintenance (R 750)"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="110dp"
        android:paddingEnd="16dp">

        <!-- Calculate Fees Button -->
        <Button
            android:id="@+id/calculateTotalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#6ba368"
            android:text="Calculate Fees"
            android:textColor="@android:color/black"
            android:padding="10dp" />

        <!-- Total Display Box -->
        <TextView
            android:id="@+id/totalFeesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="R0         "
            android:textSize="18sp"

            android:textColor="#000000"
            android:padding="10dp"
            android:background="#e0e0e0" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dp">

        <!-- Back button - bottom left -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_1"
            android:background="@android:color/transparent"
            android:contentDescription="Back" />

        <!-- Calculate Fees button - bottom right -->
        <Button
            android:id="@+id/calculateFeesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request a consultation"
            android:textColor="#000000"
            android:backgroundTint="#6ba368"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
</LinearLayout>