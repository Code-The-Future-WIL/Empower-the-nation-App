<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff6ea"
    tools:context=".contactDetails">

    <!-- Top bar layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <!-- Logo on the top left -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/applogo"
            android:contentDescription="App Logo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <!-- Heading centered -->
        <TextView
            android:id="@+id/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPOWERING THE\nNATION"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- ScrollView for scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textBoxOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="16dp"
                android:background="#6ba368"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/businessNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Number:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textBoxTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+27 83 119 5122"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#6ba368"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/emailAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textBoxThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="empoweringthenation@gmail.com"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#6ba368"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Address Dropdown Section -->
            <TextView
                android:id="@+id/addressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Venue Location:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Address Dropdown (Spinner) -->
            <Spinner
                android:id="@+id/addressDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6ba368"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <!-- Selected Address Display -->
            <TextView
                android:id="@+id/selectedAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Address:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/addressDisplayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="#6ba368"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Map Title -->
            <TextView
                android:id="@+id/mapTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location Map:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Google Maps WebView -->
            <WebView
                android:id="@+id/mapWebView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#e0e0e0"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom back button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#f5f5f5">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_1"
            android:background="@android:color/transparent"
            android:contentDescription="Back Button"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</LinearLayout>