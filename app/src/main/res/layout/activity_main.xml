<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6ea"
    tools:context=".MainActivity">

    <!-- Contact Button in top right -->
    <ImageButton
        android:id="@+id/contactButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_2"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:contentDescription="Contact Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <!-- Content container -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactButton"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/applogo"
            android:contentDescription="Empowering the Nation Logo"
            android:layout_marginBottom="20dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empowering the Nation provides practical skills training for domestic workers and gardeners, helping them grow, find better job opportunities, and even start their own businesses.\n\nFounded by Precious Radebe, we offer accessible short- and long-term courses that uplift communities and support employers inbuilding skilled teams."
            android:padding="15dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="30dp" />

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/sixMonthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#6ba368"
                android:text="Six-month courses"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/sixWeekButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#6ba368"
                android:text="Six-week courses"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>